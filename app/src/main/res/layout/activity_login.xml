<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/scotter"
            android:layout_below="@id/txttitle"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_scooter"
            android:layout_width="210dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/txttitle"
            android:textColor="#fff"
            android:alpha="0.7"
            android:text="lets'ride"
            android:textSize="70dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/righteousregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/scotter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_below="@+id/scotter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/righteousregular"
            android:layout_marginTop="5dp"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Username"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/colorPrimary"
                android:fontFamily="@font/breeserifeegular"
                android:textColor="@color/colorPrimary"
                android:id="@+id/username"
                android:inputType="text"
                android:singleLine="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/breeserifeegular"
                android:hint="Password"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:id="@+id/password"
                android:inputType="textPassword"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Login"
                android:textColor="@drawable/btn_txt_blue_bluedark"
                android:id="@+id/btn_login"
                android:fontFamily="@font/righteousregular"
                android:textSize="20sp"
                android:background="#fff"
                android:layout_gravity="end"/>


        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>


    <Button android:id="@+id/btndftr"
        android:background="@drawable/btn_daftar"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/righteousregular"
        android:textColor="@drawable/btn_txt_yellow_white"
        android:text="DAFTAR"
        android:elevation="10dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:layout_above="@id/btndftr"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:text="Belum Memiliki Akun?\nTekan Tombol dibawah"
        android:textColor="#fff"
        android:fontFamily="@font/righteousregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>